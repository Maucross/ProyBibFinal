@model Libro
<br><br><br>

<div class="row">
    <div class="col-md-12"><br>
        <h1 style="text-align:center"><u>Registrar Libros</u></h2>       
    </div>
</div>
<form asp-action="RegistrarLibro" method="post" class="borde">
    @Html.ValidationSummary()
    <div class="row">
        <div class="col-md-6">
            <h3>Datos de Libros</h3>
        <div class="form-group">
            <label asp-for="cod_lib">Código de Libro:</label>     
            <input class="form-control" type="text" name="cod_lib" asp-for="cod_lib" required>
        </div> <br>
        <div class="form-group">
            <label asp-for="ISBN">ISBN:</label>     
            <input class="form-control" type="text" value="978-9-68-247589-4" name="ISBN" asp-for="ISBN" required>
        </div> 
        </div>
        <br><br><br>
        <div class="col-md-2">
            <div class="form-group" >
                <label asp-for="año_pub">Año de Publicación: </label>
                <input class ="form-control"  type="number" name="año_pub" asp-for="año_pub" required>
            </div> 
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Categoria">Categoria:</label>  
                <select asp-for="CategoriaId" class="custom-select" asp-items="ViewBag.categorias">                  
                </select> 
            </div> 
        </div>    
    </div><br>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group" >
                <label asp-action="titulo">Titulo: </label>
                <input asp-action="titulo" class ="form-control" type="text" name="titulo" required>
            </div>    
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-action="autor">Autor: </label>
                <input asp-action="autor" class ="form-control" type="text" name="autor" required>
            </div>    
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-action="editorial">Editorial: </label>
                <input asp-action="editorial" class ="form-control" type="text" name="editorial" required>
            </div>    
        </div>   
    </div>  <br><br>
