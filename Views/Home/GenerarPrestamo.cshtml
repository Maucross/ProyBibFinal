@model Prestamo
@{
    var prestamos = Model;
}

@{
    ViewData["Title"] = "GenerarPrestamo";
}

<div class="row">
    <div class="col-md-12">
        <h1 style="text-align:center"><u>Generar Prestamo</u></h2>
        
    </div>
</div>
<div  class="row">
    <form asp-action="GenerarPrestamo" method="post" class="borde">
        @Html.ValidationSummary()
    <div class="borde col-md-6">
        <h3>Datos del Estudiante</h3>
            <div>
                <label asp-for="cod_est">Código de Estudiante:</label> 
                <input class="form-control" type="text" name="cod_est" asp-for="cod_est" value="2015147360" required>
                <input type="button" class="btn btn-primary btn-sm" value="Buscar Estudiante"/>
            </div><br>
            <div>
                <label asp-for="nomb">Nombres:</label> 
                <input type="text" class="form-control" name="nomb" asp-for="nomb" required/>
            </div><br>
            <div>
                <label asp-for="ape">Apellidos:</label> 
                <input type="text" class="form-control" name="ape" asp-for="ape" required/>
            </div><br>
            <div>
                <label asp-for="escuela">Escuela:</label> 
                <input type="text"  name="escuela" asp-for="escuela" required>
            </div><br>

            
    </div>
    <div class="borde col-md-6">
        <h3>Datos de Libro</h3>
            <div>
                <label asp-for="cod_lib">Código de Libro:</label> 
                <input class="form-control" type="text" asp-for="cod_lib" name="cod_lib" required/>
                <input type="button" class="btn btn-primary btn-sm" value="Buscar Libro">
            </div><br>
            <div>
                <label asp-for="ISBN">ISBN: </label> 
                <input class="form-control" type="text" value="978-9-68-247589-4" asp-for="ISBN" name="ISBN">
            </div><br>
            <div>
                <label asp-for="titulo">Título:</label> 
                <input class="form-control" type="text" name="titulo" asp-for="titulo">
            </div><br>
            <div>
                <label asp-for="autor">Autor:</label> 
                <input type="text" asp-action="autor" name="autor">
            </div><br>
</div>
<div class="row">
    <div class="col-md-12">
        <h3>Modalidad</h3>
        <div class="form-group">
                <label asp-for="Modalidad">Modalidad:</label>  
                <select asp-for="ModalidadId" class="custom-select" asp-items="ViewBag.modalidades">                  
                </select> 
        </div> 
        </div><br>

        <div>
            <label asp-for="fecha_reserva">Fecha de Reserva:</label> 
            <input asp-for="fecha_reserva" name="fecha_reserva" type="datetime-local" size="4">
        </div><br><br><br>
        <div style="text-align:right">
         <a  class="btn btn-primary btn-sm" href="javascript:history.back()">Regresar</a>
        <button type="button"class="btn btn-success btn-sm">Generar</button>
         </div>
    </div>
    </div>

    </form>
